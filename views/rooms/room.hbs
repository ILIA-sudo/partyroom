
<div class="container mt-4">
  <a class="btn btn-warning add-wishlist"> Добавить новый список</a>
</div>

<div class='container add-new-wishlist text-dark invisible'>
  <div class="card mt-4" style="width: auto;">
    <div class="card-body">
      <h5 class="card-title">Добавление вишлиста</h5>
      <hr>
      <div class="form-group">
        <form>
          <label for="name">Название вишлиста</label>
          <input type="text" class="form-control new-wishlist-input" id="name" required>
          <small id="name" class="form-text text-muted">Введите название вишлиста (новый год, вечеринка, день
            рожденья...)</small>
      </div>
      <button type="submit" class="btn btn-primary add-wishlist-button">Добавить</button>
      <button type="submit" class="btn btn-primary add-wishlist-button"></button>
      </form>
    </div>
  </div>
</div>
<div id="wishlist-main-container">
{{#each wishlists}}
<div class="container text-dark mt-4"> 
<div class="card">
  <h5 class="card-header">{{this.category}}</h5>
  <div class="card-body">
    <h5 class="card-title"><a href="{{this.roomid}}/wishlist/{{this.id}}">Перейти к вишлисту</a></h5>
   <button id={{this.id}} type="submit" class="btn btn-danger delete-weshlist">Удалить</button>
  </div>
</div>
</div>
{{/each}}
</div>
