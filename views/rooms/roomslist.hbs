<div id="rooms-container">
  <div id="rooms-list">
    <div class="add-button">
      <a href="/rooms/create" id="add-btn-link"><button id="add-main-btn">+</button></a>
    </div>

    {{#if rooms}}
    {{#each rooms}}
    <div class="room">
      <h4>Тема: {{this.title}}</h4>
      <p>Время создания {{this.createdAt}}</p>
      <a href="localhost:3000{{this.shortUrl}}">Shortlink: {{this.shortUrl}}</a>
      <a href="/rooms/{{this._id}}">Войти в комнату</a>
    </div>

    {{/each}}
    {{else}}
    <h3>Здесь будет список созданных вами комнат</h3>
    {{/if}}
  </div>
</div>
