<div id="room-form-container">
  <form method="POST" action="/rooms/create">
    <div class="form-group">
      <label for="exampleInputEmail1">Room title</label>
      <input type="title" class="form-control" name="title" id="exampleInputEmail1" aria-describedby="emailHelp">
    </div>
    <div class="form-group">
      <label for="shortUrl">Short URL</label>
      <input type="shortUrl" name="shortUrl" class="form-control" id="shortUrl">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
